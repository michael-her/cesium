{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "gulp",
    "args": [
        "--no-color"
    ],
    "tasks": [
      {
        "label": "build",
        "type": "gulp",
        "task": "--no-color",
        "problemMatcher": [
          "$lessCompile",
          "$tsc",
          "$jshint"
        ],
        "group": "build"
      },
      {
        "label": "test",
        "type": "gulp",
        "task": "--no-color",
        "problemMatcher": [],
        "group": "test"
      },
      {
        "label": "build-watch",
        "type": "gulp",
        "task": "--no-color",
        "isBackground": true,
        "problemMatcher": []
      }
    ]
}
